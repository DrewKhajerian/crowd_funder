<header>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="#">CrowdFunder</a>
        <div class="nav-collapse collapse">
          <ul class="nav" id="left">
            <li class="<%= 'active' if current_page? root_path %>">
              <%= link_to 'Home', :root %>
            </li>
            <li class="<%= 'active' if current_page? projects_path or @show_view %>">
              <%= link_to 'Projects', projects_path %>
            </li>
            <% if current_user %>
              <li class="<%= 'active' if current_page? my_projects_path or @new_my %>">
                <%= link_to 'My Projects', my_projects_path %>
              <li>
            <% end %>
          </ul>
          <ul class="nav pull-right">
            <% if current_user %>
              <li><%= link_to "Log out", session_path("current"), :method => :delete %></li>
            <% else %>
              <li><%= link_to "Login", new_session_path %></li>
              <li><%= link_to "Sign up", new_user_path %></li>
            <% end %>
        </ul>
        </div>
      </div>
    </div>
  </div>
</header>